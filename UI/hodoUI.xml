<?xml version="1.0" encoding="utf-8"?>
<Ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.blizzard.com/wow/ui/" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
    <!-- Option -->
    <CheckButton name="hodoCheckboxTemplate" inherits="SettingsCheckboxControlTemplate" virtual="true"/>
    <Frame name="hodoDropdownTemplate" inherits="SettingsDropDownControlTemplate" virtual="true"/>
    <Slider name="hodoSliderTemplate" inherits="SettingsSliderControlTemplate" virtual="true"/>
    <Frame name="hodoCheckboxDropdownTemplate" inherits="SettingsCheckBoxDropDownControlTemplate" virtual="true"/>
    <Frame name="hodoCheckboxSliderTemplate" inherits="SettingsCheckBoxSliderControlTemplate" virtual="true"/>

    <!-- Frame -->
    <!-- <Frame name="hodoGameMenuFrame" inherits="MainMenuFrameTemplate" virtual="true"/> ESC 게임메뉴  -->
    <!-- <Frame name="hodoPopupTemplate" inherits="StaticPopupBaseTemplate" virtual="true"/> 아이템삭제  -->
    <!-- <Frame name="hodoDialogHeaderTemplate" inherits="DialogHeaderTemplate" virtual="true"/> 게임메뉴 헤더  -->

    <!-- PartyClassFrame -->
    <Frame name="PartyClassFrame" inherits="DefaultPanelBaseTemplate" parent="UIParent" frameStrata="LOW" hidden="true">
        <Size x="542" y="212"/>
        <Anchors>
            <Anchor point="TOPLEFT" relativeTo="PVEFrame" relativePoint="BOTTOMLEFT" x="20" y="2"/>
        </Anchors>

        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="Background" atlas="UI-DialogBox-Background-Dark" alpha="0.7">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="6" y="-2"/>
                        <Anchor point="BOTTOMRIGHT" x="-2" y="2"/>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>

        <Frames>
            <Frame parentKey="TitleContainer" frameLevel="510">
                <Size x="0" y="20"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="30" y="-1"/>
                    <Anchor point="TOPRIGHT" x="-24" y="-1"/>
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString parentKey="TitleText" inherits="GameFontNormal" text="파티 유틸리티 현황" justifyH="RIGHT">
                            <Anchors>
                                <Anchor point="TOPRIGHT" x="-15" y="-5"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>
        </Frames>
    </Frame>

    <!-- DifficultyFrame -->
    <Frame name="DifficultyRowTemplate" virtual="true">
        <Size x="220" y="35"/>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="bg" atlas="legionmission-hearts-background">
                    <Anchors><Anchor point="TOPLEFT"/><Anchor point="BOTTOMRIGHT"/></Anchors>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <Texture parentKey="titleBg" atlas="UI-Character-Info-Title">
                    <Size x="60" y="25"/>
                    <Anchors><Anchor point="LEFT" x="10" y="0"/></Anchors>
                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <FontString parentKey="title" inherits="GameFontHighlightSmall">
                    <Anchors><Anchor point="CENTER" relativeKey="$parent.titleBg"/></Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Frame>

    <Frame name="DifficultyFrame" inherits="DefaultPanelBaseTemplate" parent="UIParent">
        <Size x="230" y="124"/>
        <Anchors>
            <Anchor point="TOPLEFT" x="5" y="-5"/>
        </Anchors>
        <Frames>
            <Frame parentKey="TitleArea" frameLevel="510">
                <Size x="0" y="20"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="10" y="-1"/>
                    <Anchor point="TOPRIGHT" x="-10" y="-1"/>
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString parentKey="Text" inherits="GameFontNormal" text="인스턴스 난이도 설정">
                            <Anchors><Anchor point="TOP" x="0" y="-5"/></Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>

            <Frame parentKey="bg" inherits="FlatPanelBackgroundTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" x="7" y="-18"/>
                    <Anchor point="BOTTOMRIGHT" x="-3" y="3"/>
                </Anchors>
            </Frame>

            <Button parentKey="resetBtn" frameLevel="600">
                <Size x="30" y="30"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" x="4" y="4"/>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK" textureSubLevel="5">
                        <Texture parentKey="Icon" file="Interface\Buttons\UI-RefreshButton">
                            <Size x="16" y="16"/>
                            <Anchors><Anchor point="CENTER" x="0" y="0"/></Anchors>
                        </Texture>
                    </Layer>
                </Layers>
                <NormalTexture file="Interface\Buttons\UI-SquareButton-Up"/>
                <PushedTexture file="Interface\Buttons\UI-SquareButton-Down"/>
                <DisabledTexture file="Interface\Buttons\UI-SquareButton-Disabled"/>
                <HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
                <Scripts>
                    <OnMouseDown>self.Icon:SetPoint("CENTER", 1, -1);</OnMouseDown>
                    <OnMouseUp>self.Icon:SetPoint("CENTER", 0, 0);</OnMouseUp>
                </Scripts>
            </Button>
        </Frames>
        <Scripts>
            <OnLoad>
                if self.NineSlice then NineSliceUtil.ApplyLayout(self.NineSlice, "Dialog") end
                self.bg:SetFrameLevel(self:GetFrameLevel() - 1)
            </OnLoad>
        </Scripts>
    </Frame>

    <!-- Font  -->
    <Font name="hodoFontNormal" inherits="UserScaledFontGameNormal" virtual="true"/> <!-- 12, yellow  -->
    <Font name="hodoFontNormalL" inherits="UserScaledFontGameNormal" justifyH="LEFT" virtual="true"/>
    <Font name="hodoFontNormalR" inherits="UserScaledFontGameNormal" justifyH="RIGHT" virtual="true"/>
    <Font name="hodoFontNormalSmall" inherits="UserScaledFontGameNormalSmall" virtual="true"/> <!-- 10  -->
    <Font name="hodoFontNormalSmallL" inherits="UserScaledFontGameNormalSmall" justifyH="LEFT" virtual="true"/>
    <Font name="hodoFontNormalSmallR" inherits="UserScaledFontGameNormalSmall" justifyH="RIGHT" virtual="true"/>
    <Font name="hodoFontNormalLarge" inherits="UserScaledFontGameNormalLarge" virtual="true"/> <!-- 16  -->

    <Font name="hodoFontHighlight" inherits="UserScaledFontGameHighlight" virtual="true"/>  <!-- 12, white  -->
    <Font name="hodoFontHighlightL" inherits="UserScaledFontGameHighlight" justifyH="LEFT" virtual="true"/> 
    <Font name="hodoFontHighlightR" inherits="UserScaledFontGameHighlight" justifyH="RIGHT" virtual="true"/> 
    <Font name="hodoFontHighlightSmall" inherits="UserScaledFontGameHighlightSmall" virtual="true"/>  <!-- 10  -->
    <Font name="hodoFontHighlightSmallL" inherits="UserScaledFontGameHighlightSmall" justifyH="LEFT" virtual="true"/> 
    <Font name="hodoFontHighlightSmallR" inherits="UserScaledFontGameHighlightSmall" justifyH="RIGHT" virtual="true"/> 
    
    <Font name="hodoFontDisable" inherits="UserScaledFontGameDisable" virtual="true"/>  <!-- 12, gray  -->
    <Font name="hodoFontDisableL" inherits="UserScaledFontGameDisable" justifyH="LEFT" virtual="true"/> 
    <Font name="hodoFontDisableR" inherits="UserScaledFontGameDisable" justifyH="RIGHT" virtual="true"/> 
    <Font name="hodoFontDisableSmall" inherits="UserScaledFontGameDisableSmall" virtual="true"/>  <!-- 10  -->
    <Font name="hodoFontDisableSmallL" inherits="UserScaledFontGameDisableSmall" justifyH="LEFT" virtual="true"/> 
    <Font name="hodoFontDisableSmallR" inherits="UserScaledFontGameDisableSmall" justifyH="RIGHT" virtual="true"/> 
</Ui>   